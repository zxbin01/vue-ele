@import "../css/reset.css"
@import "../css/media.css"

bg-image($url)
  background-image url("~assets/img" + $url + "@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("~assets/img" + $url + "@3x.png")

bg-star($url)
  background-image url("../star/" + $url + "@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("../star/" + $url + "@3x.png")

border-1px($color)
  position relative
  border none
  &:after
    position absolute
    bottom 0
    left 0
    content ''
    width 100%
    height 0.0625rem
    transform scaleY(0.5)
    background $color
    